{
  "name": "whisper-transcriber",
  "version": "1.0.0",
  "description": "動画・音声ファイルをWhisperで文字起こしするシステム",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build": "npm run build --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env SKIP_OPEN_BROWSER=1 node server.js",
    "dev:client": "npm run dev --prefix client"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.17.0",
    "open": "^10.1.0",
    "uuid": "^9.0.0",
    "archiver": "^7.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3"
  }
} 